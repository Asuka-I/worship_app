<div class="row justify-content-center">
  <div class="col-md-6 order-md-1 form-contents">
    <%= form_with model: @seal, local: true do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
      <div class="form-group">
        <%= f.label :category %>
        <%= f.select :category, [["神社", "神社"],["寺", "寺"]], {include_blank: "選択して下さい"}, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :prefecture_id %>
        <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: "選択して下さい"}, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: 'form-control', placeholder:"例: 島根県出雲市大社町杵築東195",  required: true %>
      </div>
      <div class="form-group">
        <%= f.label :place %>
        <%= f.text_field :place, class: 'form-control', placeholder:"例: 出雲大社", required: true %>
      </div>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :images %>
        <%= f.file_field :images,  multiple: true , accept: "image/png,image/jpeg,image/gif", class: 'form-control-file' %>
        <%= f.hidden_field :images_cache %>
      </div>
      <p>
        <label>
          <%= f.check_box :remove_images %>
          画像を削除する
        </label>
      </p>
      <p><%= f.submit button_value, class:"btn-sent-form btn btn-primary" %></p>
      <p><%= link_to "戻る", :back %></p>
    <% end %>
  </div>
</div>
