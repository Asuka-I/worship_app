<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1>Album example</h1>
      <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
      <p>
        <a href="#" class="btn btn-primary my-2">Main call to action</a>
        <a href="#" class="btn btn-secondary my-2">Secondary action</a>
      </p>
    </div>
  </section>
  <!-- 参拝記事 一覧 -->
  <div class="album py-5 bg-light">
    <div class="container">
      <h2>参拝記事一覧</h2>
      <div class="row">
        <% if user_signed_in? %>
          <% @worships.each do |worship| %>
            <%# <div class="col-4 col-md-3 col-lg-2"> %>
            <div class="col-md-3 ">
              <div class="card mb-4 shadow-sm">
                <a href="/worships/<%= worship.id %>">
                  <% if worship.images? %>
                    <%= image_tag worship.images[0].to_s, class: 'card-img-top' %>
                  <% else %>
                    <%= image_tag "default.jpg", class: 'card-img-top' %>
                  <% end %>
                  <div class="card-body">
                    <p class="card-text"><%= worship.category %> | <%= worship.place %></p>
                    <p class="card-text"><%= worship.title %></p>
                    <p class="card-text"><%= worship.user_name.present? ? worship.user_name : "会員No.#{worship.user.id}" %></p>
                  </div>
                </a>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <p class="btn-see-more"><%= link_to "もっと見る", worships_path, class: "btn btn-secondary", role: "button" %></p>
    </div>
  </div>
  <!-- ご朱印帳 一覧 -->
  <div class="album py-5 bg-light">
    <div class="container">
      <h2>ご朱印帳一覧</h2>
      <div class="row">
        <% if user_signed_in? %>
          <% @seals.each do |seal| %>
            <%# <div class="col-4 col-md-3 col-lg-2"> %>
            <div class="col-md-3">
              <div class="card mb-4 shadow-sm">
                <a href="/seals/<%= seal.id %>">
                  <% if seal.images? %>
                    <p><%= image_tag seal.images[0].to_s, class: 'card-img-top' %></p>
                  <% else %>
                    <p><%= image_tag "default.jpg", class: 'card-img-top' %></p>
                  <% end %>
                  <div class="card-body">
                    <p class="card-text"><%= seal.category %> | <%= seal.place %></p>
                    <p class="card-text"><%= seal.title %></p>
                    <p class="card-text"><%= seal.user_name.present? ? seal.user_name : "会員No.#{seal.user.id}" %></p>
                  </div>
                </a>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <p class="btn-see-more"><%= link_to "もっと見る", seals_path, class: "btn btn-secondary", role: "button" %></p>
    </div>
  </div>
</main>
